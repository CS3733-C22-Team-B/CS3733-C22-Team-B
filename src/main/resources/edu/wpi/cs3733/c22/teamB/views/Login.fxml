         <image>
            <Image url="@../images/brigham_and_womens.jpg" />
         </image>
         <effect>
            <DropShadow height="23.34" radius="11.754999999999999" width="25.68" />
         </effect>
      </ImageView>
      <Pane fx:id="contentPane" layoutX="-5.0" layoutY="-7.0" opacity="0.31" prefHeight="418.0" prefWidth="625.0" style="-fx-background-color: black;" />
      <Pane fx:id="logInBox" layoutX="45.0" layoutY="100.0" prefHeight="274.0" prefWidth="207.0" style="-fx-background-color: white; -fx-background-radius: 5;">
         <children>
            <Label layoutX="14.0" layoutY="188.0" text="Forgot your log in?">
               <font>
                  <Font name="System Italic" size="10.0" />
